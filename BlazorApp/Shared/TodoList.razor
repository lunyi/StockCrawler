
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-center" style="width:10%">
                 Done
                </th>
                <th> To Do </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Todos)
            {
                <TodoItem Text="@todo.Text" Done="@todo.Done" />
            }
        </tbody>
    </table>

@code {
    [Parameter]
    public IList<Todo> Todos { get; set; }
}
