@page "/Prices"
@namespace BlazorApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>個股速覽</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
</head>
<body>
    @*<link href="css/table.css" rel="stylesheet" />*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/6.16.0/polyfill.min.js"></script>
    <script src="https://cdn.jsdelivr.net/data-transformer/0.1.12/data-transformer-browser.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.3/vue.min.js"></script>
    <script src="~/js/price.js"></script>
    <style>
        tr:hover td {
            background-color: yellow;
        }
    </style>

    <table>
        <tr>
            <td width="400px">
                <div>營收比重:<span id="income"></span></div>
                <div>住址:<span id="address"></span></div>
                <div>股本:<span id="asset"></span>億,&nbsp;&nbsp;每股淨值:<span id="cValue"></span></div>
                <div><a id="website" href="" target="_blank">網站</a></div>
                <div id="address"></div>
            </td>
            <td>
                <div id="month" class="container">
                    <table style="font-size: 10px;border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid orange">日期</th>
                                <th style="border: 1px solid orange">單月年增率</th>
                                <th style="border: 1px solid orange">累積年增率</th>
                            </tr>
                        </thead>
                        <tr v-for="month in Months">
                            <td style="border: 1px solid orange">{{month.datetime}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: month.updownColor}">{{month.單月年增率}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: month.cColor}">{{month.累積年增率}}</td>
                        </tr>
                    </table>
                </div>
            </td>
            <td>
                <div id="thousand" class="container">
                    <table style="font-size: 10px;border-collapse: collapse;">
                        <thead>
                            <tr style="border: 1px solid orange">
                                <th style="border: 1px solid orange">日期</th>
                                <th style="border: 1px solid orange">100張以下</th>
                                <th style="border: 1px solid orange">100~400</th>
                                <th style="border: 1px solid orange">400~1000</th>
                                <th style="border: 1px solid orange">1000張以上</th>
                            </tr>
                        </thead>
                        <tr v-for="thousand in Thousands">
                            <td style="border: 1px solid orange">{{thousand.datetime}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: thousand.sColor}">{{thousand.p100}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: thousand.p400DownColor}">{{thousand.p400Down}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: thousand.p400UpColor}">{{thousand.p400Up}}</td>
                            <td style="border: 1px solid orange" v-bind:style="{ color: thousand.bColor}">{{thousand.p1000}}</td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <div id="textExample" class="container">
        <table class="table table-bordered responsive-table" style="width:1500px;position:relative;left:-180px;font-size:10px;">
            <thead>
                <tr>
                    <th>名稱</th>
                    <th>日期</th>
                    <th>收盤</th>
                    <th>量</th>
                    <th>漲跌</th>
                    <th>百分比</th>
                    <th>外資比例</th>
                    <th>外資持股</th>
                    <th>投信持股</th>
                    <th>董監持股</th>
                    <th>融資</th>
                    <th>外資</th>
                    <th>投信</th>
                    <th>自營</th>
                    <th>主力</th>
                    <th>本益比</th>
                    <th>淨值比</th>
                    <th>籌碼集中度</th>
                    <th>周轉率</th>
                </tr>
            </thead>
            <tr v-for="price in Prices">
                <td>{{price.name}}</td>
                <td>{{price.datetime}}</td>
                <td v-bind:style="{ color: price.updownColor}">{{price.close}}</td>
                <td v-bind:style="{ fontWeight: price.zfontWeight}">{{price.成交量}}</td>
                <td v-bind:style="{ color: price.updownColor, fontWeight: price.fontWeight}">{{price.漲跌}}</td>
                <td v-bind:style="{ color: price.pColor, fontWeight: price.fontWeight}">{{price.漲跌百分比}}%</td>
                <td>{{price.外資持股比例}}%</td>
                <td>{{price.外資持股}}</td>
                <td>{{price.投信持股}}</td>
                <td>{{price.董監持股}}</td>
                <td v-bind:style="{ color: price.lColor}">{{price.融資買賣超}}</td>
                <td v-bind:style="{ color: price.fColor}">{{price.外資買賣超}}</td>
                <td v-bind:style="{ color: price.tColor}">{{price.投信買賣超}}</td>
                <td v-bind:style="{ color: price.zColor}">{{price.自營商買賣超}}</td>
                <td v-bind:style="{ color: price.mColor}">{{price.主力買賣超}}</td>
                <td>{{price.本益比}}</td>
                <td>{{price.股價淨值比}}</td>
                <td v-bind:style="{ color: price.chipColor, fontWeight: price.cfontWeight}">{{price.籌碼集中度}}%</td>
                <td>{{price.周轉率}}%</td>
            </tr>
        </table>
    </div>
</body>
</html>
